---
import { Github, Book, ExternalLink } from "lucide-astro";
import { WORKSHOP_CONFIG } from "../../config/workshop";

const currentYear = new Date().getFullYear();

const footerSections = [
  {
    title: "Recursos",
    links: [
      { text: "Información", href: "/syllabus" },
      { text: "Pasos", href: "/steps" },
      { text: "Requisitos", href: "/setup" },
    ],
  },
  {
    title: "Links",
    links: [
      {
        text: "GitHub",
        href: WORKSHOP_CONFIG.repository.url,
        icon: Github,
        external: true,
      },
      {
        text: "Recursos",
        href: "/resources",
        icon: Book,
      },
    ],
  },
];
---

<footer
  class="bg-white dark:bg-neutral-800 border-t border-neutral-200 dark:border-neutral-700"
>
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3
          class="text-sm font-semibold text-neutral-600 dark:text-neutral-400 uppercase tracking-wider"
        >
          Información del Taller
        </h3>
        <ul class="mt-4 space-y-4">
          <li class="text-base text-neutral-500 dark:text-neutral-400">
            {WORKSHOP_CONFIG.title}
          </li>
          <li class="text-base text-neutral-500 dark:text-neutral-400">
            {WORKSHOP_CONFIG.place}
          </li>
          <li class="text-base text-neutral-500 dark:text-neutral-400">
            {
              new Date(WORKSHOP_CONFIG.date).toLocaleDateString("es-PE", {
                year: "numeric",
                month: "long",
                day: "numeric",
              })
            }
          </li>
        </ul>
      </div>

      {
        footerSections.map((section) => (
          <div>
            <h3 class="text-sm font-semibold text-neutral-600 dark:text-neutral-400 uppercase tracking-wider">
              {section.title}
            </h3>
            <ul class="mt-4 space-y-4">
              {section.links.map((link) => {
                const linkData = link as any;
                const IconComponent = linkData.icon;
                return (
                  <li>
                    <a
                      href={link.href}
                      class="flex items-center text-base text-neutral-500 dark:text-neutral-400 hover:text-neutral-900 dark:hover:text-white"
                      {...(linkData.external && {
                        target: "_blank",
                        rel: "noopener noreferrer",
                      })}
                    >
                      {IconComponent && <IconComponent class="w-5 h-5 mr-2" />}
                      {link.text}
                      {linkData.external && (
                        <ExternalLink class="w-4 h-4 ml-1" />
                      )}
                    </a>
                  </li>
                );
              })}
            </ul>
          </div>
        ))
      }
    </div>

    <div class="mt-8 border-t border-neutral-200 dark:border-neutral-700 pt-8">
      <p class="text-base text-neutral-400 dark:text-neutral-500 text-center">
        &copy; {currentYear} FISI - UNMSM. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>
