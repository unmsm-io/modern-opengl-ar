---
import BaseLayout from "../layouts/BaseLayout.astro";
import { WORKSHOP_CONFIG } from "../config/workshop";
import { Mail, Github, Linkedin, Twitter, ExternalLink } from "lucide-astro";

const { speaker } = WORKSHOP_CONFIG;
---

<BaseLayout title="Ponente">
  <div class="prose dark:prose-invert max-w-none">
    <h1 class="text-2xl font-semibold mb-6">Ponente del Taller</h1>

    <div class="space-y-8">
      <!-- Speaker Information -->
      <section>
        <div
          class="bg-white dark:bg-zinc-800/50 border border-zinc-200 dark:border-zinc-700 rounded-lg p-6"
        >
          <div class="flex flex-col md:flex-row gap-6">
            <img
              src={speaker.avatar}
              alt={speaker.name}
              class="w-48 h-48 mt-0 mb-0 object-cover rounded-lg mx-auto md:mx-0"
              loading="lazy"
            />
            <div class="flex-1">
              <h2 class="text-xl font-semibold mt-0 mb-2">
                {speaker.name}
              </h2>
              <p class="text-zinc-600 dark:text-zinc-300 mb-4">
                {speaker.role}
              </p>

              <div class="space-y-3">
                <a
                  href={`mailto:${speaker.contact}`}
                  class="text-sm text-blue-600 dark:text-blue-400 hover:underline inline-flex items-center gap-2"
                >
                  <Mail class="w-4 h-4" />
                  {speaker.contact}
                </a>

                <div class="flex flex-wrap gap-4">
                  {
                    speaker.social.github && (
                      <a
                        href={speaker.social.github}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-sm text-zinc-600 dark:text-zinc-400 hover:text-zinc-900 dark:hover:text-white inline-flex items-center gap-2"
                      >
                        <Github class="w-4 h-4" />
                        GitHub
                        <ExternalLink class="w-3 h-3" />
                      </a>
                    )
                  }

                  {
                    speaker.social.linkedin && (
                      <a
                        href={speaker.social.linkedin}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-sm text-zinc-600 dark:text-zinc-400 hover:text-zinc-900 dark:hover:text-white inline-flex items-center gap-2"
                      >
                        <Linkedin class="w-4 h-4" />
                        LinkedIn
                        <ExternalLink class="w-3 h-3" />
                      </a>
                    )
                  }

                  {
                    speaker.social.twitter && (
                      <a
                        href={speaker.social.twitter}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-sm text-zinc-600 dark:text-zinc-400 hover:text-zinc-900 dark:hover:text-white inline-flex items-center gap-2"
                      >
                        <Twitter class="w-4 h-4" />
                        Twitter
                        <ExternalLink class="w-3 h-3" />
                      </a>
                    )
                  }
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Workshop Information -->
      <section>
        <h2 class="text-lg font-medium mt-0 mb-4">Información del Taller</h2>
        <div
          class="bg-white dark:bg-zinc-800/50 border border-zinc-200 dark:border-zinc-700 rounded-lg p-4"
        >
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <h3 class="font-medium mb-2">Título</h3>
              <p class="text-zinc-600 dark:text-zinc-300">
                {WORKSHOP_CONFIG.title}
              </p>
            </div>
            <div>
              <h3 class="font-medium mb-2">Fecha</h3>
              <p class="text-zinc-600 dark:text-zinc-300">
                {
                  new Date(WORKSHOP_CONFIG.date).toLocaleDateString("es-PE", {
                    weekday: "long",
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })
                }
              </p>
            </div>
            <div>
              <h3 class="font-medium mb-2">Duración</h3>
              <p class="text-zinc-600 dark:text-zinc-300">
                {WORKSHOP_CONFIG.durationHours} horas
              </p>
            </div>
            <div>
              <h3 class="font-medium mb-2">Lugar</h3>
              <p class="text-zinc-600 dark:text-zinc-300">
                {WORKSHOP_CONFIG.place}
              </p>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</BaseLayout>
