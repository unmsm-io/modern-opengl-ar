---
import BaseLayout from "../layouts/BaseLayout.astro";
import { WORKSHOP_CONFIG } from "../config/workshop";
import {
  ExternalLink,
  Download,
  FileText,
  Settings,
  BookOpen,
} from "lucide-astro";
---

<BaseLayout title="Recursos">
  <div class="prose dark:prose-invert max-w-none">
    <h1 class="text-2xl font-semibold mb-6">Recursos del Taller</h1>

    <div class="space-y-8">
      <!-- Workshop Resources -->
      <section>
        <div class="flex items-baseline gap-2 mb-4">
          <h2 class="text-lg font-medium mt-0 mb-0">
            <FileText class="w-5 h-5 inline mr-2" />
            Recursos del Taller
          </h2>
        </div>

        <div class="grid gap-4 md:grid-cols-3">
          {
            WORKSHOP_CONFIG.resources.map((resource) => (
              <a
                href={resource.href}
                target="_blank"
                rel="noopener noreferrer"
                class="block no-underline hover:underline bg-white dark:bg-neutral-800/50 hover:bg-neutral-100 dark:hover:bg-neutral-700/50 transition-colors border border-neutral-200 dark:border-neutral-700 rounded p-4"
              >
                <div class="flex items-center justify-between">
                  <div>
                    <h3 class="text-base font-medium mt-0 mb-1">
                      {resource.title}
                    </h3>
                    <p class="text-sm text-neutral-600 dark:text-neutral-300 m-0">
                      Descargar recurso
                    </p>
                  </div>
                  <Download class="w-4 h-4 text-neutral-400" />
                </div>
              </a>
            ))
          }
        </div>
      </section>

      <!-- Prerequisites -->
      <section>
        <div class="flex items-baseline gap-2 mb-4">
          <h2 class="text-lg font-medium mt-0 mb-0">
            <Settings class="w-5 h-5 inline mr-2" />
            Prerrequisitos
          </h2>
        </div>

        <div class="grid gap-4">
          {
            WORKSHOP_CONFIG.prerequisites.map((prereq) => (
              <div class="bg-white dark:bg-neutral-800/50 border border-neutral-200 dark:border-neutral-700 rounded p-4">
                <div class="flex items-start gap-3">
                  <div class="w-2 h-2 bg-blue-600 rounded-full mt-2" />
                  <div>
                    <p class="font-medium text-sm mt-0 mb-1">{prereq}</p>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </section>

      <!-- Software Tools -->
      <section>
        <div class="flex items-baseline gap-2 mb-4">
          <h2 class="text-lg font-medium mt-0 mb-0">
            <Settings class="w-5 h-5 inline mr-2" />
            Herramientas Recomendadas
          </h2>
        </div>

        <div class="grid gap-4 md:grid-cols-2">
          {
            WORKSHOP_CONFIG.developmentTools.map((tool) => (
              <div class="bg-white dark:bg-neutral-800/50 border border-neutral-200 dark:border-neutral-700 rounded p-4">
                <div class="flex items-center justify-between mb-2">
                  <h3 class="text-base font-medium mt-0 mb-0">{tool.name}</h3>
                  <span class="text-xs text-neutral-500 dark:text-neutral-400 bg-neutral-100 dark:bg-neutral-700 px-2 py-1 rounded">
                    {tool.platform}
                  </span>
                </div>
                <p class="text-sm text-neutral-600 dark:text-neutral-300 mb-3">
                  {tool.description}
                </p>
                <a
                  href={tool.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-blue-600 dark:text-blue-400 text-sm hover:underline inline-flex items-center gap-1"
                >
                  Descargar
                  <ExternalLink class="w-3.5 h-3.5" />
                </a>
              </div>
            ))
          }
        </div>
      </section>

      <!-- Development Documentation -->
      <section>
        <div class="flex items-baseline gap-2 mb-4">
          <h2 class="text-lg font-medium mt-0 mb-0">
            <BookOpen class="w-5 h-5 inline mr-2" />
            Documentación
          </h2>
        </div>

        <div class="grid gap-4 md:grid-cols-2">
          {
            WORKSHOP_CONFIG.documentation.map((resource) => (
              <a
                href={resource.url}
                class="block no-underline hover:underline bg-white dark:bg-neutral-800/50 hover:bg-neutral-100 dark:hover:bg-neutral-700/50 transition-colors border border-neutral-200 dark:border-neutral-700 rounded p-4"
                target="_blank"
                rel="noopener noreferrer"
              >
                <div class="flex items-center justify-between">
                  <div>
                    <h3 class="text-base font-medium mt-0 mb-1">
                      {resource.title}
                    </h3>
                    <p class="text-sm text-neutral-600 dark:text-neutral-300 m-0">
                      {resource.description}
                    </p>
                  </div>
                  <ExternalLink class="w-4 h-4 text-neutral-400" />
                </div>
              </a>
            ))
          }
        </div>
      </section>

      <!-- Repository Info -->
      <section>
        <div class="flex items-baseline gap-2 mb-4">
          <h2 class="text-lg font-medium mt-0 mb-0">Repositorio del Taller</h2>
        </div>

        <div
          class="bg-white dark:bg-neutral-800/50 border border-neutral-200 dark:border-neutral-700 rounded-lg p-6"
        >
          <div class="flex items-start gap-4">
            <div class="flex-1">
              <h3 class="text-lg font-semibold mt-0 mb-2">
                {WORKSHOP_CONFIG.repository.url.split("/").pop()}
              </h3>
              <p class="text-neutral-600 dark:text-neutral-300 mb-4">
                Código fuente completo del taller con todos los pasos
                implementados. Cada paso está etiquetado con su correspondiente
                tag.
              </p>

              <div class="flex items-center gap-4">
                <a
                  href={WORKSHOP_CONFIG.repository.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors text-sm font-medium"
                >
                  <ExternalLink class="w-4 h-4" />
                  Ver en GitHub
                </a>

                <div class="text-sm text-neutral-500 dark:text-neutral-400">
                  Licencia: {WORKSHOP_CONFIG.repository.license}
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</BaseLayout>
